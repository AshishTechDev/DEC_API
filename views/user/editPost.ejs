    <body>
        <section class="home-section">
          <%- include('../partials/leftaside.ejs') %>
          <%- include('../partials/rightaside.ejs') %>
        </section>
        <!-- 1:42:03 -- 230723 -->
        <div class="Edit-overlay" style="display: block;">
          <form class="Edit-post-box" action="/updatepost" method="post" enctype="multipart/form-data">
            <div class="image-upload__preview Edit-Post-img">
              <img src="<% if(!postimg){ %>http://via.placeholder.com/1280x720<% } else { %>https://auth-api-app.onrender.com/<%= Singlepost.imageUrl %><% } %>" alt="">
              <div class="edit-post-photo">
                <i class="fa-regular fa-image" style="color: white;" type="button" onclick="pickImageHandler()"></i>
                <input
                type="file"
                name="imageUrl"
                id="imageUrl"
                hidden
                onchange="pickedhandler(event)"
              />
            </div>
            </div>
            <div class="Edit-Post-Title">
              <textarea name="title" ><%= Singlepost.title %></textarea>
            </div>
            <input type="hidden" name="id" value="<%= Singlepost._id %>">
            <div class="post-author-Buttons Edit-Post-Buttons">
              <button type="submit">Update</button>
              <a id="Cancel-Btn" href="/mypost">Cancel</button>
            </div>
          </form>
        </div>
        </div>
        <script src="../js/edit-post.js"></script>

                    <%- include('../partials/end.ejs') %>